<h1>Listing blogs</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.body %></td>
    <td><%= blog.user_id %></td>
    <td><%= link_to 'Show', blog %></td>
		<% if current_user %>
	    <td><%= link_to 'Edit', edit_blog_path(blog) if current_user.id == blog.user_id %></td>
	    <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } if current_user.id == blog.user_id %></td>
		<% end %>
  </tr>
<% end %>
</table>

<br />
<%= link_to 'New Blog', new_blog_path if current_user %>
